generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  email            String    @unique
  password         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  role             String
  isActive         Boolean   @default(true)
  resetToken       String?
  resetTokenExpiry DateTime?
  carts            Cart[]
}

model Product {
  id                String     @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  brand             String?    // Lucky Me, Mega, etc.
  product           String?    // Pancit Canton, Sardines, etc.
  quantity          String?    // 1 pc, 1 can, etc.
  size              String?    // 150g, 1L, etc.
  price             String     // Selling price (retail price with tubo)
  unitCost          String?    // Original price (cost price)
  stock             String
  status            String     @default("available")
  imageUrl          String?
  barcode           String?    @unique
  lowStockThreshold Int?       // Custom low stock threshold per product (null = use general threshold)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  categoryId        String     @db.ObjectId
  category          Category   @relation(fields: [categoryId], references: [id])
  sales             Sale[]
  movements         StockMovement[]
  cartItems         CartItem[]
}

model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Sale {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  productId   String   @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id])
  quantity    Int
  unitPrice   Float
  totalAmount Float
  refId       String?  // Link to order/transaction
  userId      String?  // Who made the sale
  approvedBy  String?  // Admin who approved void (for void transactions)
  createdAt   DateTime @default(now())
}

model StockMovement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  productId   String   @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id])
  type        String   // "sale" | "refund" | "manual" | "void"
  quantity    Int      // negative for sale, positive for refund
  beforeStock Int
  afterStock  Int
  refId       String?  // orderId or reference id
  reason      String?
  userId      String?
  createdAt   DateTime @default(now())
}

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String     @unique // For anonymous users, use session ID
  userId    String?    @db.ObjectId // For logged-in users
  user      User?      @relation(fields: [userId], references: [id])
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String   @db.ObjectId
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
}

model VoidRequest {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  transactionNo     String   // The transaction to void
  requestedBy       String   // Staff user ID who requested
  requestedByEmail  String   // For display purposes
  reason            String?  // Optional reason for void
  status            String   @default("pending") // "pending" | "approved" | "rejected"
  approvedBy        String?  // Admin user ID who approved/rejected
  approvedByEmail   String?  // For display purposes
  approvedAt        DateTime?
  transactionData   String   // JSON stringified transaction details for reference
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}