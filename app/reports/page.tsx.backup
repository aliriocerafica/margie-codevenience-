      // Set column widths
      worksheet['!cols'] = [
        { wch: 10 },
        { wch: 15 },
        { wch: 15 },
        { wch: 20 }
      ];
      
      const workbook = XLSX.utils.book_new();
      XLSX.utils.book_append_sheet(workbook, worksheet, 'Sales Performance');
      XLSX.writeFile(workbook, `sales-performance-${timestamp}.xlsx`);
    }
    setIsSalesExportOpen(false);
  };

  // Export functions for Top Products
  const exportTopProducts = () => {
    const timestamp = new Date().toISOString().slice(0, 10);
    
    if (exportFileType === "csv") {
      const header = ["Rank", "Product", "Units Sold", "Revenue", "Trend"];
      const lines = extendedTopProducts.map((r: any, idx: number) => [
        idx + 1,
        r.name.replaceAll(",", " "),
        r.sold,
        r.revenue,
        r.trend
      ].join(","));
      const csv = [header.join(","), ...lines].join("\n");
      const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `top-products-${timestamp}.csv`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "tsv") {
      const header = ["Rank", "Product", "Units Sold", "Revenue", "Trend"];
      const lines = extendedTopProducts.map((r: any, idx: number) => [
        idx + 1,
        r.name,
        r.sold,
        r.revenue,
        r.trend
      ].join("\t"));
      const tsv = [header.join("\t"), ...lines].join("\n");
      const blob = new Blob([tsv], { type: "text/tab-separated-values;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `top-products-${timestamp}.tsv`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "json") {
      const payload = extendedTopProducts.map((r: any, idx: number) => ({
        rank: idx + 1,
        ...r
      }));
      const blob = new Blob([JSON.stringify(payload, null, 2)], { type: "application/json;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `top-products-${timestamp}.json`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "xml") {
      const escXml = (v: any) => String(v).replaceAll("&", "&amp;").replaceAll("<", "&lt;").replaceAll(">", "&gt;");
      const rowsXml = extendedTopProducts.map((r: any, idx: number) => (
        `  <product>\n` +
        `    <rank>${idx + 1}</rank>\n` +
        `    <name>${escXml(r.name)}</name>\n` +
        `    <sold>${escXml(r.sold)}</sold>\n` +
        `    <revenue>${escXml(r.revenue)}</revenue>\n` +
        `    <trend>${escXml(r.trend)}</trend>\n` +
        `  </product>`
      )).join("\n");
      const xml = `<?xml version="1.0" encoding="UTF-8"?>\n<topProducts>\n${rowsXml}\n</topProducts>\n`;
      const blob = new Blob([xml], { type: "application/xml;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `top-products-${timestamp}.xml`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "xlsx") {
      // Create Excel file
      const worksheet = XLSX.utils.json_to_sheet(extendedTopProducts.map((r: any, idx: number) => ({
        'Rank': idx + 1,
        'Product': r.name,
        'Units Sold': r.sold,
        'Revenue (₱)': r.revenue,
        'Trend': r.trend
      })));
      
      // Set column widths
      worksheet['!cols'] = [
        { wch: 8 },
        { wch: 25 },
        { wch: 12 },
        { wch: 15 },
        { wch: 10 }
      ];
      
      const workbook = XLSX.utils.book_new();
      XLSX.utils.book_append_sheet(workbook, worksheet, 'Top Products');
      XLSX.writeFile(workbook, `top-products-${timestamp}.xlsx`);
    }
    setIsProductsExportOpen(false);
  };

  // Export functions for Revenue Trends
  const exportRevenueTrends = () => {
    const timestamp = new Date().toISOString().slice(0, 10);
    
    if (exportFileType === "csv") {
      const header = ["Period", "Revenue", "Growth %"];
      const lines = extendedRevenueData.map((r: any) => [
        r.period,
        r.revenue,
        r.growth
      ].join(","));
      const csv = [header.join(","), ...lines].join("\n");
      const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `revenue-trends-${timestamp}.csv`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "tsv") {
      const header = ["Period", "Revenue", "Growth %"];
      const lines = extendedRevenueData.map((r: any) => [
        r.period,
        r.revenue,
        r.growth
      ].join("\t"));
      const tsv = [header.join("\t"), ...lines].join("\n");
      const blob = new Blob([tsv], { type: "text/tab-separated-values;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `revenue-trends-${timestamp}.tsv`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "json") {
      const payload = extendedRevenueData;
      const blob = new Blob([JSON.stringify(payload, null, 2)], { type: "application/json;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `revenue-trends-${timestamp}.json`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "xml") {
      const escXml = (v: any) => String(v).replaceAll("&", "&amp;").replaceAll("<", "&lt;").replaceAll(">", "&gt;");
      const rowsXml = extendedRevenueData.map((r: any) => (
        `  <week>\n` +
        `    <period>${escXml(r.period)}</period>\n` +
        `    <revenue>${escXml(r.revenue)}</revenue>\n` +
        `    <growth>${escXml(r.growth)}</growth>\n` +
        `  </week>`
      )).join("\n");
      const xml = `<?xml version="1.0" encoding="UTF-8"?>\n<revenueTrends>\n${rowsXml}\n</revenueTrends>\n`;
      const blob = new Blob([xml], { type: "application/xml;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `revenue-trends-${timestamp}.xml`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "xlsx") {
      // Create Excel file
      const worksheet = XLSX.utils.json_to_sheet(extendedRevenueData.map((r: any) => ({
        'Period': r.period,
        'Revenue (₱)': r.revenue,
        'Growth (%)': r.growth
      })));
      
      // Set column widths
      worksheet['!cols'] = [
        { wch: 12 },
        { wch: 15 },
        { wch: 12 }
      ];
      
      const workbook = XLSX.utils.book_new();
      XLSX.utils.book_append_sheet(workbook, worksheet, 'Revenue Trends');
      XLSX.writeFile(workbook, `revenue-trends-${timestamp}.xlsx`);
    }
    setIsRevenueExportOpen(false);
  };

  const performExport = () => {
    const withinRange = (createdAt: string | number | Date) => {
      if (exportAll) return true;
      const ts = new Date(createdAt).getTime();
      const fromOk = exportFrom ? ts >= new Date(exportFrom).getTime() : true;
      const toOk = exportTo ? ts <= new Date(exportTo).getTime() : true;
      return fromOk && toOk;
    };

    const filtered = rows.filter((r: any) => withinRange(r.createdAt));

    if (exportFileType === "csv") {
      const header = ["Date","Product","Type","Qty","Before","After","Ref","Reason"]; 
      const lines = filtered.map((r: any) => [
        new Date(r.createdAt).toISOString(),
        (r.product?.name ?? "").replaceAll(","," "),
        r.type,
        r.quantity,
        r.beforeStock,
        r.afterStock,
        r.refId ?? "",
        (r.reason ?? "").replaceAll(","," ")
      ].join(","));
      const csv = [header.join(","), ...lines].join("\n");
      const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `stock-movements-${new Date().toISOString().slice(0,10)}.csv`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "tsv") {
      const header = ["Date","Product","Type","Qty","Before","After","Ref","Reason"]; 
      const esc = (v: any) => String(v).replaceAll("\t", " ");
      const lines = filtered.map((r: any) => [
        new Date(r.createdAt).toISOString(),
        esc(r.product?.name ?? ""),
        esc(r.type),
        esc(r.quantity),
        esc(r.beforeStock),
        esc(r.afterStock),
        esc(r.refId ?? ""),
        esc(r.reason ?? "")
      ].join("\t"));
      const tsv = [header.join("\t"), ...lines].join("\n");
      const blob = new Blob([tsv], { type: "text/tab-separated-values;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `stock-movements-${new Date().toISOString().slice(0,10)}.tsv`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "json") {
      const payload = filtered.map((r: any) => ({
        createdAt: r.createdAt,
        product: r.product?.name ?? "",
        type: r.type,
        quantity: r.quantity,
        beforeStock: r.beforeStock,
        afterStock: r.afterStock,
        refId: r.refId ?? "",
        reason: r.reason ?? ""
      }));
      const blob = new Blob([JSON.stringify(payload, null, 2)], { type: "application/json;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `stock-movements-${new Date().toISOString().slice(0,10)}.json`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "xml") {
      const escXml = (v: any) => String(v)
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;")
        .replaceAll('"', "&quot;")
        .replaceAll("'", "&apos;");
      const rowsXml = filtered.map((r: any) => (
        `  <movement>\n`+
        `    <createdAt>${escXml(new Date(r.createdAt).toISOString())}</createdAt>\n`+
        `    <product>${escXml(r.product?.name ?? "")}</product>\n`+
        `    <type>${escXml(r.type)}</type>\n`+
        `    <quantity>${escXml(r.quantity)}</quantity>\n`+
        `    <beforeStock>${escXml(r.beforeStock)}</beforeStock>\n`+
        `    <afterStock>${escXml(r.afterStock)}</afterStock>\n`+
        `    <refId>${escXml(r.refId ?? "")}</refId>\n`+
        `    <reason>${escXml(r.reason ?? "")}</reason>\n`+
        `  </movement>`
      )).join("\n");
      const xml = `<?xml version="1.0" encoding="UTF-8"?>\n<stockMovements>\n${rowsXml}\n</stockMovements>\n`;
      const blob = new Blob([xml], { type: "application/xml;charset=utf-8;" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = `stock-movements-${new Date().toISOString().slice(0,10)}.xml`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (exportFileType === "xlsx") {
      window.alert("Export to Excel (.xlsx) is not available yet. Please use CSV for Excel.");
      return;
    } else if (exportFileType === "pdf") {
      window.alert("PDF export is not available yet.");
